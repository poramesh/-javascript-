index.js

const express = require('express')
const router = express.Router()
const book = require('../models/book')

router.get('/', (req,res)=>{
let books
try{
books = await book.find().sort({createAT:'desc'}).limit(10).exec()
}catch{
 book = []
}
res.render('index',{booksbooks})
})

module.exports = router

